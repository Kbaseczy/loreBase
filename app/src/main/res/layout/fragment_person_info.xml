<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.subFragment.PersonInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:contentDescription="TODO"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/personInfo"
        android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout style="@style/wrap_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="Id:     "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/deId"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

        </LinearLayout>
        <View style="@style/bg_line"/>

        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="UserName :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/uName"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <View style="@style/bg_line"/>

        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="Account: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="10" />
        </LinearLayout>
        <View style="@style/bg_line"/>

        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="PWD:        "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="10" />
        </LinearLayout>
        <View style="@style/bg_line"/>

        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="Phone:     "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="10" />
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="Email:       "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp" />
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="CreatTime:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cTime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp" />
        </LinearLayout>
        <View style="@style/bg_line"/>
        <LinearLayout
            style="@style/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:text="UpdateTime:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/uTime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp" />
        </LinearLayout>
        <View style="@style/bg_line"/>


    </LinearLayout>
</LinearLayout>